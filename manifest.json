{
  "manifest_version": 3,
  "name": "Poomodoro",
  "version": "1.0",
  "description": "Pomodoro timer with Firebase Authentication",
  "permissions": [
    "identity",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.firebaseapp.com/*",
    "https://accounts.google.com/*",
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "oauth2": {
    "client_id": "423292605879-18essmfcuhdgtvl7vomedutnfslt65ro.apps.googleusercontent.com",
    "scopes": [
      "email",
      "profile"
    ]
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Poomodoro"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}