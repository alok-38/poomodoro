{
  "manifest_version": 3,
  "name": "Poomodoro",
  "version": "1.0",
  "description": "Pomodoro timer with Firebase auth",
  "permissions": ["identity", "storage"],
  "host_permissions": ["https://*.firebaseapp.com/*"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "oauth2": {
    "client_id": "423292605879-18essmfcuhdgtvl7vomedutnfslt65ro.apps.googleusercontent.com",
    "scopes": ["email", "profile"]
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Poomodoro"
  }
}
